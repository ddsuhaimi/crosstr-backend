{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    // "types": [
    //   "node"
    // ],
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    // "paths": {
    //   "*": ["node_modules/*"]
    // },
    "declaration": true,
    "declarationMap": true,
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
  ],
  "exclude": [
    "src/public/"
  ]
}